<h2 class="ui header">Upcoming Events</h2>
<div class="ui three stackable cards">
<% @upcoming_events.each do |event| %>
  <div class="ui link card">
    <div class="image">
      <img src="https://images.pexels.com/photos/2608517/pexels-photo-2608517.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500">
    </div>
  <div class="content">
    <div class="header"><%= event.description %></div>
    <div class="meta">
      <span class="category">Events</span>
    </div>
    <div class="description">
      <p></p>
    </div>
  </div>
  <div class="extra content">
    <div class="right floated author">
      <img class="ui avatar image" src="https://images.unsplash.com/photo-1530700724215-a100745eb7e9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60"> Matt
    </div>
  </div>
</div>
<% end %>
</div>
<div class='ui section divider'></div>
<h2 class="ui header">Previous Events</h2>
<div class="ui three stackable cards">
<% @previous_events.each do |event| %>
  <div class="ui link card">
    <div class="image">
      <img src="https://images.pexels.com/photos/2608517/pexels-photo-2608517.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500">
    </div>
  <div class="content">
    <div class="header"><%= event.description %></div>
    <div class="meta">
      <span class="category">Events</span>
    </div>
    <div class="description">
      <p></p>
    </div>
  </div>
  <div class="extra content">
    <div class="right floated author">
      <img class="ui avatar image" src="https://images.unsplash.com/photo-1530700724215-a100745eb7e9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60"> Matt
    </div>
  </div>
</div>
<% end %>
</div>



